import tkinter as tk

def greet():
    label.config(text="Hello, Tkinter!")

window = tk.Tk()
window.title("Simple Tkinter App")
window.geometry("300x150")

label = tk.Label(window, text="Welcome!")
label.pack(pady=10)

button = tk.Button(window, text="Click Me", command=greet)
button.pack(pady=10)

window.mainloop()
